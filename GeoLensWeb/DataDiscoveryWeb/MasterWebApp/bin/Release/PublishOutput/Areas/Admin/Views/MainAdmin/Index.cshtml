<script>

    $(document).ready(function () {



        $("#search").autocomplete({

            source: function (request, response) {
                $.ajax({

                    url: "/DigitalLibrary/GetPaperTitle",
                    type: "POST",
                    dataType: "json",
                    data: { letter: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item, value: item };

                        }))

                    }
                })
            },

            messages: {
                noResults: "", results: ""
            }
        });



    })




</script>