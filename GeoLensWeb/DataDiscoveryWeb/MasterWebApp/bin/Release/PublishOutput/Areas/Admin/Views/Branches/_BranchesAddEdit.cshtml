@using Data.ViewModel;
@using DataLayer;


@model BranchesAddViewModel
@using (Html.BeginForm("BranchesAddEdit", "Branches", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        @Html.HiddenFor(x => x.Branches.countryID)

        @if (Model.Branches != null)
        {

            @Html.HiddenFor(model => model.Branches.statusID)

        }
        
      <div class="form-row">

          <div class="form-group col-lg-12 col-12">
              <label>
                  @MasterWebApp.Resource.Branches.companyID
              </label>

              @Html.DropDownListFor(model => model.Branches.companyID, (SelectList)ViewBag.CompaniesV, MasterWebApp.Resource.CommonMessage.selectItem, new { @class = "form-control col-12" })
              @Html.ValidationMessageFor(model => model.Branches.companyID)

          </div>
      </div>

        <div class="form-group">
            <label>
                @MasterWebApp.Resource.Branches.branchNameAr
            </label>

            @Html.TextBoxFor(model => model.Branches.branchNameAr, new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(model => model.Branches.branchNameAr)

        </div>

        <div class="form-group">
            <label>
                @MasterWebApp.Resource.Branches.branchNameEn
            </label>

            @Html.TextBoxFor(model => model.Branches.branchNameEn, new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(model => model.Branches.branchNameEn)

        </div>

       <div class="form-row">
           <div class="form-group col-lg-6 col-12">
               <label>
                   @MasterWebApp.Resource.Branches.tel1
               </label>

               @Html.TextBoxFor(model => model.Branches.tel1, new { @class = "form-control col-12" })
               @Html.ValidationMessageFor(model => model.Branches.tel1)

           </div>

           <div class="form-group col-lg-6 col-12">
               <label>
                   @MasterWebApp.Resource.Branches.tel2
               </label>

               @Html.TextBoxFor(model => model.Branches.tel2, new { @class = "form-control col-12" })
               @Html.ValidationMessageFor(model => model.Branches.tel2)

           </div>
       </div>

<div class="form-row">
    <div class="form-group col-lg-6 col-12">
        <label>
            @MasterWebApp.Resource.Branches.countryID
        </label>

        @Html.DropDownListFor(model=> model.Branches.countryID, (SelectList)ViewBag.CountriesV, MasterWebApp.Resource.CommonMessage.selectItem, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Branches.countryID)

    </div>
    <div class="form-group col-lg-6 col-12">
        <label>
            @MasterWebApp.Resource.Branches.cityID
        </label>

        @Html.DropDownListFor(model => model.Branches.cityID, (SelectList)ViewBag.CitiesV, MasterWebApp.Resource.CommonMessage.selectItem, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Branches.cityID)

    </div>

</div>   
        
        <div class="form-group">
            <label>
                @MasterWebApp.Resource.Branches.mail1
            </label>

            @Html.TextBoxFor(model => model.Branches.mail1, new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(model => model.Branches.mail1)

        </div>


        <div class="form-group">
            <label>
                @MasterWebApp.Resource.Branches.mail2
            </label>

            @Html.TextBoxFor(model => model.Branches.mail2, new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(model => model.Branches.mail2)

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button  type="submit" 
                       class="btn btn-primary">

                    <i class="far fa-save"></i>
                    @MasterWebApp.Resource.CommonMessage.btnSave
                    </button>
                
            </div>
        </div>
    </div>
}

