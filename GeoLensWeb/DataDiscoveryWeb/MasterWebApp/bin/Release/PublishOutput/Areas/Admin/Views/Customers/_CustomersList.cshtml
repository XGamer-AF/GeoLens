@using Data.ViewModel;
@using DataLayer;
@using PagedList;

@model IPagedList<CustomersViewModel>
@{ 
    string lang = FunServices.getLang("lang");
}




<div style="padding-top:5px;">

    <table id="mTable" class="table table-striped table-bordered table-hover table-responsive">

      
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td class="" style="width:70.22%">
                        <i class="fas fa-id-badge"></i>
                        @item.firstName
                        
                        @item.lastName

                        <br />
                        <i class="fas fa-phone-volume"></i>
                        @item.mail
                        <i class="fas fa-phone-volume"></i>
                        @item.tel1
                    </td>
                   <td style="width:20.22%">
                      @if (lang == "ar")
                      {
                        @item.Countries.countryNameAr
                      }
                      else
                      {
                        @item.Countries.countryNameEn
                      }
                      <br />
                       @if (lang == "ar")
                       {
                           @item.Cities.cityNameAr
                       }
                       else
                       {
                           @item.Cities.cityNameEn
                       }
                       <br />
                       @if (lang == "ar")
                       {
                           @item.Nationality.nationalityNameAr
                       }
                       else
                       {
                           @item.Nationality.nationalityNameEn
                       }
                   </td>

                    <td class="" style="width:20.22%">


                        <br />
                        @if (item.statusID == 1)
                        {

                           
                                <span class="badge" style="background-color: #006400; color: #fff; padding: 6px;"> @MasterWebApp.Resource.CommonMessage.status1</span>



                        }
                        else
                        {

                            <span class="badge" style="background-color: #FF0000; color: #fff; padding: 6px;"> @MasterWebApp.Resource.CommonMessage.status0</span>

                           

                        }

                     

                    </td>


                    <td class="col-md-1">
                        <div class="dropdown">
                            <button class=" btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">

                                <li>
                                    <a href="@Url.Action("ChangeStatus", "Customers", new { id = item.customerID, statusID = 1 })">
                                        <i class="far fa-check-square"></i>
                                        @MasterWebApp.Resource.CommonMessage.btnActive

                                    </a>

                                </li>



                                <li>
                                    <a href="@Url.Action("ChangeStatus", "Members", new { id = item.customerID, statusID = 0 })">
                                        <i class="fas fa-minus-circle"></i>

                                        @MasterWebApp.Resource.CommonMessage.btnDelete

                                    </a>

                                </li>




                            </ul>
                        </div>




                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>
