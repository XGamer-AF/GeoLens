@using Data.ViewModel;
@using DataLayer;


@model NationalityAddViewModel
@using (Html.BeginForm("NationalityAddEdit", "Nationality", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        @Html.HiddenFor(x => x.Nationality.nationalityID)

        @if (Model.Nationality != null)
        {

            @Html.HiddenFor(model => model.Nationality.statusID)

        }
        

        <div class="form-group">
            <label>
                @MasterWebApp.Resource.Nationality.nationalityNameAr
            </label>

            @Html.TextBoxFor(model => model.Nationality.nationalityNameAr, new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(model => model.Nationality.nationalityNameAr)

        </div>

        <div class="form-group">
            <label>
                @MasterWebApp.Resource.Nationality.nationalityNameEn
            </label>

            @Html.TextBoxFor(model => model.Nationality.nationalityNameEn, new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(model => model.Nationality.nationalityNameEn)

        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button  type="submit" 
                       class="btn btn-primary">

                    <i class="far fa-save"></i>
                    @MasterWebApp.Resource.CommonMessage.btnSave
                    </button>
                
            </div>
        </div>
    </div>
}

