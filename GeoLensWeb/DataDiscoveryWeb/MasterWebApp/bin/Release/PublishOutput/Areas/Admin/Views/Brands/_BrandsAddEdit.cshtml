@using Data.ViewModel;
@using DataLayer;


@model BrandsAddViewModel
@using (Html.BeginForm("BrandsAddEdit", "Brands", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        @Html.HiddenFor(x => x.Brands.brandID)

        @if (Model.Brands != null)
        {

            @Html.HiddenFor(model => model.Brands.statusID)

        }
        
      


        <div class="form-group">
            <label>
                @MasterWebApp.Resource.Brands.brandNameAr
            </label>

            @Html.TextBoxFor(model => model.Brands.brandNameAr, new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(model => model.Brands.brandNameAr)

        </div>

        <div class="form-group">
            <label>
                @MasterWebApp.Resource.Brands.brandNameEn
            </label>

            @Html.TextBoxFor(model => model.Brands.brandNameEn, new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(model => model.Brands.brandNameEn)

        </div>

       


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button  type="submit" 
                       class="btn btn-primary">

                    <i class="far fa-save"></i>
                    @MasterWebApp.Resource.CommonMessage.btnSave
                    </button>
                
            </div>
        </div>
    </div>
}

