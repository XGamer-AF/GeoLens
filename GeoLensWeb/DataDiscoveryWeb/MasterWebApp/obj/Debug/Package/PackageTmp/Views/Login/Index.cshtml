@using DataLayer;

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="col-lg-12 p-lg-0 " dir="@FunServices.getLang("dir")">
    <br />
    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <div class="d-flex align-items-center  justify-content-center ">


            <div class="col-lg-4 p-0 ">

                <div class="card border-dark">
                    <div class="card-header bg-dark text-white">
                        <h4>@MasterWebApp.Resource.Login.header  </h4>
                    </div>

                    <div class="card-body">
                        @if (TempData["Msg"] != null)
                {
                    <span class="Msgerror">
                        @TempData["Msg"]
                    </span>
                    }
                        <div class="form-horizontal" style="padding:10px;">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <label>
                                    @MasterWebApp.Resource.Login.userName
                                </label>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroup-sizing-default">
                                            <span class="fa fa-user"></span>
                                        </span>
                                    </div>
                                    @Html.TextBox("username",null, new { @class = "form-control col-12", @onblur = "clearText()" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label>
                                    @MasterWebApp.Resource.Login.password
                                </label>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroup-sizing-default">
                                            <span class="fa fa-key"></span>
                                        </span>
                                    </div>
                                    @Html.Password("password",null, new { @class = "form-control col-12", @onblur = "clearText()" })
                                </div>
                                
                            </div>

                            <div class="d-flex justify-content-between pt-3" style="clear:both;">
                                <button type="submit" class="btn btn-danger m-1" >
                                    @MasterWebApp.Resource.Login.submit
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

<style>
    .card {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
    }
</style>