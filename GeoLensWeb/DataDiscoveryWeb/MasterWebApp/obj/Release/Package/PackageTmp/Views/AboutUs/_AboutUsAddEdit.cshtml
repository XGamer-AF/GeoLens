@using Data.ViewModel;
@using DataLayer;


@model AboutUsAddViewModel
@using (Html.BeginForm("AboutUsAddEdit", "AboutUs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        @Html.HiddenFor(x => x.AboutUs.aboutUsID)

        @if (Model.AboutUs != null)
        {

            @Html.HiddenFor(model => model.AboutUs.statusID)

        }






        <div class="form-group">
            <label>
                @MasterWebApp.Resource.AboutUs.aboutUsDescEn
            </label>

            @Html.TextAreaFor(model => model.AboutUs.aboutUsDescEn, new { @class = "form-control col-12 en", rows = "5" })
            @Html.ValidationMessageFor(model => model.AboutUs.aboutUsDescEn)

        </div>

        <div class="form-group">
            <label>
                @MasterWebApp.Resource.AboutUs.aboutUsDescAr
            </label>

            @Html.TextAreaFor(model => model.AboutUs.aboutUsDescAr, new { @class = "form-control col-12 ar", rows = "5" })
            @Html.ValidationMessageFor(model => model.AboutUs.aboutUsDescAr)

        </div>








        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit"
                        class="btn btn-primary">

                    <i class="far fa-save"></i>
                    @MasterWebApp.Resource.CommonMessage.btnSave
                </button>

            </div>
        </div>
    </div>
}

