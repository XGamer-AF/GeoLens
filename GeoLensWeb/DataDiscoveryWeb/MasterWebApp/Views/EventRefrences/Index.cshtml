@using Data.ViewModel;
@using DataLayer;
@using PagedList
@using PagedList.Mvc;
@model EventRefrencesAddViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string lang = FunServices.getLang("lang");
}

<div class="container">
    <div class="card border-dark">
        <div class="card-header bg-dark text-white">
            <div class="d-flex justify-content-between">
            <span class="center_line">
                @ViewBag.eventName
            </span>

            <span>
                <a href="@Url.Action("Index", "EventInfo")" class="btn btn_card">

                    <i class="fa fa-list-alt"></i>
                    @MasterWebApp.Resource.EventInfo.title
                </a>

            </span>
        </div>
        

    </div>
    <div class="card-body">
        @using (Html.BeginForm("Index", "EventRefrences", FormMethod.Get))
            {
            <div>
                @Html.HiddenFor(x => x.eventID)



            </div>

        }


        <div style=" clear:both;">

            <div class="form-group col-lg-8 col-12">
                @Html.Partial("_EventRefrencesList")
            </div>

            <div class="form-group col-lg-4 col-12">
                @Html.Partial("_EventRefrencesAddEdit")
            </div>

        </div>

    </div>
</div>



</div>


<hr />

<div class="pr-4 pl-4 divPage d-flex flex-row flex-grow-1 ">
    @Html.PagedListPager(Model.EventRefrencesAll, page => Url.Action("Index", new { page, search = Request.QueryString["search"] })
, new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })


</div>
