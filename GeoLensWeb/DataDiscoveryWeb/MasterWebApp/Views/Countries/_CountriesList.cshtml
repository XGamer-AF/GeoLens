@using Data.ViewModel;
@using DataLayer;
@model CountriesAddViewModel


<a href="@Url.Action("CountriesAddEdit", "Countries")" class="btn btn-primary">

    <i class="fas fa-plus-circle"></i>
    @MasterWebApp.Resource.CommonMessage.btnNew
</a>


@{
    string lang = FunServices.getLang("lang");
}

<div style="padding-top:5px;">

    <table id="mTable" class="table table-striped table-bordered table-hover table-responsive">

        <thead>
            <tr>
                <td style="width:40.44%">
                    @MasterWebApp.Resource.Countries.countryNameEn
                </td>
                <td style="width:40.44%">
                    @MasterWebApp.Resource.Countries.countryNameAr
                </td>
                <td style="width:15.44%">
                </td>


              

                <td style="width:10.1%"></td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CountriesAll)
            {

            <tr>
                <td>
                    @item.countryNameEn
                </td>
                <td>
                    @item.countryNameAr
                </td>
               
                <td>
                    <a href="@Url.Action("CountriesAddEdit", new { id = item.countryID })" style="padding:10px;">
                        <i class="far fa-edit"></i>
                    </a>
                </td>

                <td>
                    <a href="@Url.Action("ChangeStatus", new { id = item.countryID, statusID = 0 })" style="padding:10px;" onclick="return confirm('@MasterWebApp.Resource.CommonMessage.confirmDelete')">
                        <i class="fas fa-minus-circle"></i>
                    </a>
                </td>
            </tr>

            }
        </tbody>
    </table>

</div>
